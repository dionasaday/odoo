        <!-- Search View -->
        <record id="view_knowledge_article_search" model="ir.ui.view">
            <field name="name">knowledge.article.search</field>
            <field name="model">knowledge.article</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="responsible_id"/>
                    <field name="parent_id"/>
                    <field name="tag_ids"/>
                    <filter string="My Articles" name="filter_my_articles" domain="[('responsible_id', '=', uid)]"/>
                    <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Tagged" name="filter_tagged" domain="[('tag_ids', '!=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_knowledge_article_kanban" model="ir.ui.view">
            <field name="name">knowledge.article.kanban</field>
            <field name="model">knowledge.article</field>
            <field name="arch" type="xml">
                <kanban default_group_by="category_id" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="responsible_id"/>
                    <field name="active"/>
                    <progressbar field="active" colors='{"true": "success", "false": "muted"}'/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <div>
                                        <field name="category_id"/>
                                    </div>
                                    <div>
                                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    </div>
                                    <div>
                                        <field name="responsible_id"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action: Knowledge Base (Document View) -->
        <record id="action_knowledge_article_document" model="ir.actions.client">
            <field name="name">Knowledge Base</field>
            <field name="tag">knowledge_document_view</field>
        </record>

        <!-- Action: All Articles (List View) -->
        <record id="action_knowledge_article" model="ir.actions.act_window">
            <field name="name">Knowledge Articles</field>
            <field name="res_model">knowledge.article</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="knowledge_onthisday_oca.view_knowledge_article_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first knowledge article!
                </p>
                <p>
                    Store and organize your organizational knowledge including SOPs,
                    product information, system manuals, and policies.
                </p>
            </field>
        </record>

        <!-- Action: My Articles -->
        <record id="action_knowledge_article_my" model="ir.actions.act_window">
            <field name="name">My Articles</field>
            <field name="res_model">knowledge.article</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('responsible_id', '=', uid)]</field>
            <field name="search_view_id" ref="knowledge_onthisday_oca.view_knowledge_article_search"/>
        </record>
    </data>
</odoo>
