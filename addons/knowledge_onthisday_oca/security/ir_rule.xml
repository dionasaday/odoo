<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Rule: Regular users can only see active articles -->
        <!-- This ensures deleted/archived articles are hidden from normal users -->
        <record id="knowledge_article_user_rule" model="ir.rule">
            <field name="name">Knowledge Article: User Access - Active Shared/Owner</field>
            <field name="model_id" ref="model_knowledge_article"/>
            <field name="domain_force">['&amp;', ('active', '=', True), '|', ('responsible_id', '=', user.id), ('shared_user_ids', 'in', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Rule: System users can see all articles (including inactive/trashed) -->
        <!-- System administrators need full access to manage and restore articles -->
        <record id="knowledge_article_system_rule" model="ir.rule">
            <field name="name">Knowledge Article: System Access - All Articles</field>
            <field name="model_id" ref="model_knowledge_article"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
        
        <!-- Rule: Users can see all categories -->
        <!-- Categories are organizational tools, no need to restrict access -->
        <record id="knowledge_article_category_user_rule" model="ir.rule">
            <field name="name">Knowledge Article Category: User Access</field>
            <field name="model_id" ref="model_knowledge_article_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Rule: System users have full access to categories -->
        <record id="knowledge_article_category_system_rule" model="ir.rule">
            <field name="name">Knowledge Article Category: System Access</field>
            <field name="model_id" ref="model_knowledge_article_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
        
        <!-- Rule: Users can see all tags -->
        <!-- Tags are organizational tools, no need to restrict access -->
        <record id="knowledge_article_tag_user_rule" model="ir.rule">
            <field name="name">Knowledge Article Tag: User Access</field>
            <field name="model_id" ref="model_knowledge_article_tag"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Rule: System users have full access to tags -->
        <record id="knowledge_article_tag_system_rule" model="ir.rule">
            <field name="name">Knowledge Article Tag: System Access</field>
            <field name="model_id" ref="model_knowledge_article_tag"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
        
        <!-- Rule: Knowledge Managers can see all articles (including inactive/trashed) -->
        <record id="knowledge_article_manager_rule" model="ir.rule">
            <field name="name">Knowledge Article: Manager Access - All Articles</field>
            <field name="model_id" ref="model_knowledge_article"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('knowledge_onthisday_oca.group_knowledge_manager'))]"/>
        </record>
        
        <!-- Rule: Users can see comments on articles they have access to -->
        <record id="knowledge_article_comment_user_rule" model="ir.rule">
            <field name="name">Knowledge Article Comment: User Access</field>
            <field name="model_id" ref="model_knowledge_article_comment"/>
            <field name="domain_force">['&amp;', ('article_id.active', '=', True), '|', ('article_id.responsible_id', '=', user.id), ('article_id.shared_user_ids', 'in', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Rule: System users can see all comments -->
        <record id="knowledge_article_comment_system_rule" model="ir.rule">
            <field name="name">Knowledge Article Comment: System Access</field>
            <field name="model_id" ref="model_knowledge_article_comment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
        
        <!-- Rule: Knowledge Managers can see all comments -->
        <record id="knowledge_article_comment_manager_rule" model="ir.rule">
            <field name="name">Knowledge Article Comment: Manager Access</field>
            <field name="model_id" ref="model_knowledge_article_comment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('knowledge_onthisday_oca.group_knowledge_manager'))]"/>
        </record>

        <!-- Rule: Users can read share members for articles they can access -->
        <record id="knowledge_article_member_user_rule" model="ir.rule">
            <field name="name">Knowledge Article Member: User Read Access</field>
            <field name="model_id" ref="model_knowledge_article_member"/>
            <field name="domain_force">['&amp;', ('article_id.active', '=', True), '|', ('article_id.responsible_id', '=', user.id), ('article_id.shared_user_ids', 'in', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <!-- Rule: Owners can manage share members for their articles -->
        <record id="knowledge_article_member_owner_rule" model="ir.rule">
            <field name="name">Knowledge Article Member: Owner/Shared Manage Access</field>
            <field name="model_id" ref="model_knowledge_article_member"/>
            <field name="domain_force">['|', ('article_id.responsible_id', '=', user.id), ('article_id.shared_user_ids', 'in', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <!-- Rule: System users can manage all share members -->
        <record id="knowledge_article_member_system_rule" model="ir.rule">
            <field name="name">Knowledge Article Member: System Access</field>
            <field name="model_id" ref="model_knowledge_article_member"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <!-- Rule: Knowledge Managers can manage all share members -->
        <record id="knowledge_article_member_manager_rule" model="ir.rule">
            <field name="name">Knowledge Article Member: Manager Access</field>
            <field name="model_id" ref="model_knowledge_article_member"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('knowledge_onthisday_oca.group_knowledge_manager'))]"/>
        </record>

        <!-- Rule: Users can read revisions for articles they can access -->
        <record id="knowledge_article_revision_user_rule" model="ir.rule">
            <field name="name">Knowledge Article Revision: User Read Access</field>
            <field name="model_id" ref="model_knowledge_article_revision"/>
            <field name="domain_force">['|', ('article_id.responsible_id', '=', user.id), ('article_id.shared_user_ids', 'in', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <!-- Rule: Users can create revisions (system will validate article access) -->
        <record id="knowledge_article_revision_user_create_rule" model="ir.rule">
            <field name="name">Knowledge Article Revision: User Create Access</field>
            <field name="model_id" ref="model_knowledge_article_revision"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <!-- Rule: Owners can manage revisions for their articles -->
        <record id="knowledge_article_revision_owner_rule" model="ir.rule">
            <field name="name">Knowledge Article Revision: Owner Manage Access</field>
            <field name="model_id" ref="model_knowledge_article_revision"/>
            <field name="domain_force">[('article_id.responsible_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <!-- Rule: System users can manage all revisions -->
        <record id="knowledge_article_revision_system_rule" model="ir.rule">
            <field name="name">Knowledge Article Revision: System Access</field>
            <field name="model_id" ref="model_knowledge_article_revision"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <!-- Rule: Knowledge Managers can manage all revisions -->
        <record id="knowledge_article_revision_manager_rule" model="ir.rule">
            <field name="name">Knowledge Article Revision: Manager Access</field>
            <field name="model_id" ref="model_knowledge_article_revision"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('knowledge_onthisday_oca.group_knowledge_manager'))]"/>
        </record>
        
    </data>
</odoo>
