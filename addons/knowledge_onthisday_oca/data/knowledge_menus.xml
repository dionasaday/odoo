<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Top-level menu -->
        <menuitem id="menu_knowledge_root"
                  name="Knowledge"
                  sequence="50"
                  web_icon="knowledge_onthisday_oca,static/description/icon.svg"/>

               <!-- Submenu: Knowledge Base (Document View) -->
               <menuitem id="menu_knowledge_base"
                         name="Knowledge Base"
                         parent="menu_knowledge_root"
                         action="knowledge_onthisday_oca.action_knowledge_article_document"
                         sequence="10"/>

               <!-- Submenu: All Articles (List View) -->
               <menuitem id="menu_knowledge_all_articles"
                         name="All Articles"
                         parent="menu_knowledge_root"
                         action="knowledge_onthisday_oca.action_knowledge_article"
                         sequence="20"/>

        <!-- Submenu: My Articles -->
        <menuitem id="menu_knowledge_my_articles"
                  name="My Articles"
                  parent="menu_knowledge_root"
                  action="knowledge_onthisday_oca.action_knowledge_article_my"
                  sequence="20"/>

        <!-- Configuration Menu -->
        <menuitem id="menu_knowledge_configuration"
                  name="Configuration"
                  parent="menu_knowledge_root"
                  sequence="90"/>

        <!-- Submenu: Categories -->
        <menuitem id="menu_knowledge_categories"
                  name="Categories"
                  parent="menu_knowledge_configuration"
                  action="knowledge_onthisday_oca.action_knowledge_article_category"
                  sequence="10"/>

        <!-- Submenu: Tags -->
        <menuitem id="menu_knowledge_tags"
                  name="Tags"
                  parent="menu_knowledge_configuration"
                  action="knowledge_onthisday_oca.action_knowledge_article_tag"
                  sequence="20"/>
    </data>
</odoo>

