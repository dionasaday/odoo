<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="ir_cron_monthly_discipline_summary" model="ir.cron">
      <field name="name">Discipline Monthly Summary (Manager)</field>
      <field name="model_id" ref="base.model_res_company"/>
      <field name="state">code</field>
      <field name="code">model._cron_send_monthly_discipline_summary()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">months</field>
      <field name="active">True</field>
      <!-- ตั้งต้นให้รันเช้า ๆ ของวันที่ 1 เดือนถัดไป -->
      <field name="nextcall"
             eval="(datetime.now() + relativedelta(months=1, day=1, hour=8, minute=0, second=0)).strftime('%Y-%m-%d %H:%M:%S')"/>
      <field name="user_id" ref="base.user_root"/>
    </record>
  </data>
</odoo>
