<odoo>
  <record id="view_lateness_rule_tree" model="ir.ui.view">
    <field name="name">hr.discipline.lateness.rule.tree</field>
    <field name="model">hr.discipline.lateness.rule</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="min_minute"/>
        <field name="max_minute"/>
        <field name="offense_xmlid"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_lateness_rule_form" model="ir.ui.view">
    <field name="name">hr.discipline.lateness.rule.form</field>
    <field name="model">hr.discipline.lateness.rule</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="min_minute"/>
            <field name="max_minute"/>
            <field name="offense_xmlid" placeholder="onthisday_hr_discipline.offense_late_6_15"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_lateness_rule" model="ir.actions.act_window">
    <field name="name">กฎการมาสาย (Attendance)</field>
    <field name="res_model">hr.discipline.lateness.rule</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_hr_discipline_lateness_rules"
            name="กฎการมาสาย (Attendance)"
            parent="menu_hr_discipline_config"
            action="onthisday_hr_discipline.action_lateness_rule"
            sequence="99"
            groups="onthisday_hr_discipline.group_discipline_hr,onthisday_hr_discipline.group_discipline_manager"/>
</odoo>
