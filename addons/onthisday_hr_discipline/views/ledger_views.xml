<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_hr_discipline_ledger" model="ir.actions.act_window">
        <field name="name">สมุดคะแนน</field>
        <field name="res_model">hr.discipline.point.ledger</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>

    <record id="view_ledger_tree" model="ir.ui.view">
        <field name="name">hr.discipline.point.ledger.tree</field>
        <field name="model">hr.discipline.point.ledger</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="year"/>
                <field name="points_change"/>
                <field name="reason"/>
                <field name="case_id"/>
            </list>
        </field>
    </record>

    <record id="view_ledger_form" model="ir.ui.view">
        <field name="name">hr.discipline.point.ledger.form</field>
        <field name="model">hr.discipline.point.ledger</field>
        <field name="arch" type="xml">
            <form string="รายการคะแนน">
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="employee_id"/>
                        <field name="year" readonly="1"/>
                        <field name="points_change"/>
                        <field name="reason"/>
                        <field name="case_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
