<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Offense Category -->
    <record id="action_hr_offense_category" model="ir.actions.act_window">
        <field name="name">ประเภทความผิด</field>
        <field name="res_model">hr.discipline.offense.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_offense_category_tree" model="ir.ui.view">
        <field name="name">hr.discipline.offense.category.tree</field>
        <field name="model">hr.discipline.offense.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="note"/>
            </list>
        </field>
    </record>

    <record id="view_offense_category_form" model="ir.ui.view">
        <field name="name">hr.discipline.offense.category.form</field>
        <field name="model">hr.discipline.offense.category</field>
        <field name="arch" type="xml">
            <form string="ประเภทความผิด">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Offense -->
    <record id="action_hr_offense" model="ir.actions.act_window">
        <field name="name">กรณีความผิด (Catalog)</field>
        <field name="res_model">hr.discipline.offense</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_offense_tree" model="ir.ui.view">
        <field name="name">hr.discipline.offense.tree</field>
        <field name="model">hr.discipline.offense</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="category_id"/>
                <field name="points"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_offense_form" model="ir.ui.view">
        <field name="name">hr.discipline.offense.form</field>
        <field name="model">hr.discipline.offense</field>
        <field name="arch" type="xml">
            <form string="ความผิด">
                <sheet>
                    <group>
                        <field name="name"/>
                        <group>
                            <field name="category_id"/>
                            <field name="points"/>
                            <field name="active"/>
                        </group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
