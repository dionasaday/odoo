<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_hr_discipline_email_log_list" model="ir.ui.view">
      <field name="name">hr.discipline.email.log.list</field>
      <field name="model">hr.discipline.email.log</field>
      <field name="arch" type="xml">
        <list>
          <field name="sent_at"/>
          <field name="company_id" optional="show"/>
          <field name="res_model"/>
          <field name="res_id"/>
          <field name="template_id" optional="show"/>
          <field name="subject" optional="show"/>
          <field name="email_to" optional="show"/>
          <field name="email_cc" optional="show"/>
          <field name="state"/>
        </list>
      </field>
    </record>

    <record id="view_hr_discipline_email_log_form" model="ir.ui.view">
      <field name="name">hr.discipline.email.log.form</field>
      <field name="model">hr.discipline.email.log</field>
      <field name="arch" type="xml">
        <form string="Discipline Email Log">
          <sheet>
            <group>
              <field name="sent_at"/>
              <field name="company_id"/>
              <field name="state"/>
            </group>
            <group>
              <field name="res_model"/>
              <field name="res_id"/>
              <field name="template_id"/>
            </group>
            <group>
              <field name="subject"/>
              <field name="email_to"/>
              <field name="email_cc"/>
            </group>
            <group>
              <field name="error_message" readonly="1"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_hr_discipline_email_log_search" model="ir.ui.view">
      <field name="name">hr.discipline.email.log.search</field>
      <field name="model">hr.discipline.email.log</field>
      <field name="arch" type="xml">
        <search>
          <field name="subject"/>
          <field name="email_to"/>
          <field name="email_cc"/>
          <field name="res_model"/>
          <field name="template_id"/>
          <filter string="Sent" name="state_sent" domain="[('state','=','sent')]"/>
          <filter string="Failed" name="state_failed" domain="[('state','=','failed')]"/>
          <separator/>
          <filter string="Company" name="group_company" context="{'group_by':'company_id'}"/>
          <filter string="Model" name="group_model" context="{'group_by':'res_model'}"/>
          <filter string="State" name="group_state" context="{'group_by':'state'}"/>
        </search>
      </field>
    </record>

    <record id="action_hr_discipline_email_log" model="ir.actions.act_window">
      <field name="name">บันทึกการส่งอีเมล</field>
      <field name="res_model">hr.discipline.email.log</field>
      <field name="view_mode">list,form</field>
      <field name="search_view_id" ref="view_hr_discipline_email_log_search"/>
    </record>
  </data>
</odoo>
