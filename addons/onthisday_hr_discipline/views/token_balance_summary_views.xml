<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Token Balance Summary (List) -->
  <record id="view_employee_token_balance_summary_tree" model="ir.ui.view">
    <field name="name">hr.employee.token.balance.summary.tree</field>
    <field name="model">hr.employee</field>
    <field name="arch" type="xml">
      <list string="สรุป Token คงเหลือ" create="0" edit="0" delete="0">
        <field name="name"/>
        <field name="department_id"/>
        <field name="job_id"/>
        <field name="parent_id"/>
        <field name="company_management_review_threshold" invisible="1"/>
        <field name="token_balance_period" widget="badge"
               decoration-danger="token_balance_period &lt;= 0"
               decoration-warning="token_balance_period &gt; 0 and token_balance_period &lt;= (company_management_review_threshold or 0)"
               decoration-success="token_balance_period &gt; (company_management_review_threshold or 0)"/>
        <field name="tokens_deducted_period" string="Tokens Deducted"/>
        <field name="token_period_start_period"/>
        <field name="token_period_end_period"/>
      </list>
    </field>
  </record>

  <!-- Add Token Period filters to hr.employee search view (inheritance) for easy month selection -->
  <record id="view_employee_filter_token_period" model="ir.ui.view">
    <field name="name">hr.employee.filter.token.period</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_filter"/>
    <field name="arch" type="xml">
      <xpath expr="//filter[@name='inactive']" position="after">
        <separator/>
        <filter string="Token: เดือนนี้" name="token_period_this_month"
                context="{'token_period_date': (context_today()).strftime('%%Y-%%m-01')}"
                groups="onthisday_hr_discipline.group_discipline_hr,onthisday_hr_discipline.group_discipline_manager"/>
        <filter string="Token: เดือนที่แล้ว" name="token_period_last_month"
                context="{'token_period_date': (context_today() + relativedelta(months=-1)).strftime('%%Y-%%m-01')}"
                groups="onthisday_hr_discipline.group_discipline_hr,onthisday_hr_discipline.group_discipline_manager"/>
        <filter string="Token: 2 เดือนที่แล้ว" name="token_period_2_months"
                context="{'token_period_date': (context_today() + relativedelta(months=-2)).strftime('%%Y-%%m-01')}"
                groups="onthisday_hr_discipline.group_discipline_hr,onthisday_hr_discipline.group_discipline_manager"/>
        <filter string="Token: 3 เดือนที่แล้ว" name="token_period_3_months"
                context="{'token_period_date': (context_today() + relativedelta(months=-3)).strftime('%%Y-%%m-01')}"
                groups="onthisday_hr_discipline.group_discipline_hr,onthisday_hr_discipline.group_discipline_manager"/>
      </xpath>
    </field>
  </record>

  <!-- Token Balance Summary (Search) - standalone for action search_view_id -->
  <record id="view_employee_token_balance_summary_search" model="ir.ui.view">
    <field name="name">hr.employee.token.balance.summary.search</field>
    <field name="model">hr.employee</field>
    <field name="arch" type="xml">
      <search string="สรุป Token คงเหลือ">
        <field name="name"/>
        <field name="department_id"/>
        <field name="job_id"/>
        <field name="parent_id" string="Manager"/>
        <field name="company_id"/>
        <separator/>
        <filter string="เดือนนี้" name="token_period_this_month"
                context="{'token_period_date': (context_today()).strftime('%%Y-%%m-01')}"/>
        <filter string="เดือนที่แล้ว" name="token_period_last_month"
                context="{'token_period_date': (context_today() + relativedelta(months=-1)).strftime('%%Y-%%m-01')}"/>
        <filter string="2 เดือนที่แล้ว" name="token_period_2_months"
                context="{'token_period_date': (context_today() + relativedelta(months=-2)).strftime('%%Y-%%m-01')}"/>
        <filter string="3 เดือนที่แล้ว" name="token_period_3_months"
                context="{'token_period_date': (context_today() + relativedelta(months=-3)).strftime('%%Y-%%m-01')}"/>
        <separator/>
        <field name="token_period_start_period" string="ช่วงเริ่มงวด"/>
      </search>
    </field>
  </record>

  <!-- Action for Token Balance Summary -->
  <record id="action_token_balance_summary" model="ir.actions.act_window">
    <field name="name">สรุป Token คงเหลือ</field>
    <field name="res_model">hr.employee</field>
    <field name="view_mode">list</field>
    <field name="view_id" ref="view_employee_token_balance_summary_tree"/>
    <field name="views" eval="[(ref('view_employee_token_balance_summary_tree'), 'list')]"/>
    <field name="search_view_id" ref="view_employee_token_balance_summary_search"/>
    <field name="domain">[]</field>
    <field name="context">{'create': False, 'edit': False, 'token_balance_summary': True}</field>
  </record>

  <!-- Router Action (HR = all, Manager = team) -->
  <record id="action_token_balance_summary_router" model="ir.actions.server">
    <field name="name">สรุป Token คงเหลือ</field>
    <field name="model_id" ref="hr.model_hr_employee"/>
    <field name="state">code</field>
    <field name="code">
action = model.action_open_token_balance_summary()
    </field>
  </record>
</odoo>
