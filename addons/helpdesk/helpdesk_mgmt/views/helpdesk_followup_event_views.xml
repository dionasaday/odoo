<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_helpdesk_followup_event_tree" model="ir.ui.view">
        <field name="name">helpdesk.followup.event.list</field>
        <field name="model">helpdesk.followup.event</field>
        <field name="arch" type="xml">
            <list>
                <field name="trigger_at" />
                <field name="ticket_id" />
                <field name="policy_id" />
                <field name="assigned_user_id" />
                <field name="state" />
                <field name="followup_created_at" />
                <field name="followup_done_at" />
                <field name="response_time_hours" />
                <field name="escalation_created_at" />
            </list>
        </field>
    </record>

    <record id="view_helpdesk_followup_event_form" model="ir.ui.view">
        <field name="name">helpdesk.followup.event.form</field>
        <field name="model">helpdesk.followup.event</field>
        <field name="arch" type="xml">
            <form string="Follow-up Event">
                <sheet>
                    <group>
                        <field name="ticket_id" />
                        <field name="policy_id" />
                        <field name="state" />
                    </group>
                    <group>
                        <field name="trigger_at" />
                        <field name="followup_created_at" />
                        <field name="followup_done_at" />
                        <field name="response_time_hours" />
                    </group>
                    <group>
                        <field name="followup_activity_id" />
                        <field name="assigned_user_id" />
                        <field name="due_date" />
                    </group>
                    <group>
                        <field name="escalation_activity_id" />
                        <field name="escalated_to_user_id" />
                        <field name="escalation_created_at" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_followup_event_pivot" model="ir.ui.view">
        <field name="name">helpdesk.followup.event.pivot</field>
        <field name="model">helpdesk.followup.event</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="id" type="measure" />
                <field name="response_time_hours" type="measure" />
                <field name="completion_rate" type="measure" />
                <field name="escalation_count" type="measure" />
                <field name="assigned_user_id" type="row" />
                <field name="policy_id" type="col" />
            </pivot>
        </field>
    </record>

    <record id="view_helpdesk_followup_event_graph" model="ir.ui.view">
        <field name="name">helpdesk.followup.event.graph</field>
        <field name="model">helpdesk.followup.event</field>
        <field name="arch" type="xml">
            <graph type="bar">
                <field name="completion_rate" type="measure" />
                <field name="response_time_hours" type="measure" />
                <field name="escalation_count" type="measure" />
                <field name="assigned_user_id" type="row" />
                <field name="trigger_at" type="col" interval="week" />
            </graph>
        </field>
    </record>

    <record id="action_helpdesk_followup_event" model="ir.actions.act_window">
        <field name="name">Follow-up Events</field>
        <field name="res_model">helpdesk.followup.event</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="helpdesk_followup_event_menu"
        name="Follow-up Events"
        parent="helpdesk_ticket_reporting_menu"
        action="action_helpdesk_followup_event"
        sequence="50"
        groups="helpdesk_mgmt.group_helpdesk_user"
    />
</odoo>
