<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <record
        id="action_helpdesk_ticket_kanban_from_dashboard"
        model="ir.actions.act_window"
    >
        <field name="name">Helpdesk Ticket</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">
            {'default_team_id': active_id, 'default_team_ids': [active_id]}
        </field>
        <field name="domain">[('team_id', '=', active_id)]</field>
    </record>
    <record id="helpdesk_ticket_action_unassigned" model="ir.actions.act_window">
        <field name="name">Helpdesk Ticket</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,list,form</field>
        <field
            name="domain"
        >[('team_id', '=', False), ("stage_id.closed", "=", False)]</field>
    </record>
    <record id="helpdesk_ticket_action_opened" model="ir.actions.act_window">
        <field name="name">Helpdesk Ticket</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[("stage_id.closed", "=", False)]</field>
    </record>
    <record id="helpdesk_ticket_view_search" model="ir.ui.view">
        <field name="name">helpdesk.ticket.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="priority">16</field>
        <field name="arch" type="xml">
            <search string="Helpdesk Tickets">
                <field name="number"/>
                <field name="purchase_order_number"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="assigned_user_ids"/>
                <field name="stage_id"/>
                <separator/>
                <filter string="Open" name="open" domain="[('closed', '=', False)]"/>
                <filter
                    string="My Tickets"
                    name="mytickets"
                    domain="['|', ('user_id', '=', uid), ('assigned_user_ids', 'in', uid)]"
                />
            </search>
        </field>
    </record>
    <record id="ticket_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Helpdesk Ticket">
                <header>
                    <button
                        string="Assign to me"
                        name="assign_to_me"
                        type="object"
                        invisible="user_id"
                    />
                    <button
                        string="Mark as duplicate"
                        name="action_open_duplicate_wizard"
                        type="object"
                        invisible="duplicate_id or duplicate_ids or not duplicate_tracking_enabled"
                    />
                    <field
                        name="stage_id"
                        widget="statusbar_duration"
                        options="{'clickable': '1', 'fold_field': 'fold', 'no_create': True, 'no_create_edit': True}"
                    />
                </header>
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        invisible="active"
                    />
                    <widget
                        name="web_ribbon"
                        title="Duplicate"
                        bg_color="bg-danger"
                        invisible="not duplicate_id"
                    />
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button"
                            type="object"
                            name="action_view_duplicates"
                            icon="fa-clone"
                            invisible="duplicate_count == 0"
                        >
                            <field
                                string="Duplicates"
                                name="duplicate_count"
                                widget="statinfo"
                            />
                        </button>
                    </div>
                    <div class="oe_title">
                        <div
                            class="alert alert-info oe_edit_only"
                            role="alert"
                            name="warning_duplicate"
                            invisible="not duplicate_id"
                        > This ticket is a
                            duplicate of <field
                            name="duplicate_id"
                            readonly="stage_id.closed"
                        />
                        </div>
                        <h1 class="oe_title">
                            <field name="number" />
                        </h1>
                        <h2 class="o_row">
                            <field
                                name="name"
                                required="1"
                                placeholder="[SKU] Product Name – อาการหลัก (เช่น มอเตอร์ไม่หมุน)"
                            />
                        </h2>
                    </div>
                    <group name="main">
                        <group>
                            <field name="active" invisible="1" />
                            <field name="duplicate_tracking_enabled" invisible="1" />
                            <field name="team_id" options='{"always_reload": True}' />
                            <field name="user_ids" invisible="1" readonly="1" />
                            <field name="user_id" invisible="1" />
                            <field
                                name="assigned_user_ids"
                                options='{"always_reload": True}'
                                widget="many2many_avatar_user"
                            />
                            <field name="priority" widget="priority" />
                            <field
                                name="company_id"
                                options="{'no_create': True}"
                                groups="base.group_multi_company"
                            />
                            <field name="create_date" readonly="1" />
                            <field name="channel_id" required="1" />
                        </group>
                        <group>
                            <field name="partner_id" />
                            <field name="x_contact_email" readonly="1" />
                            <field name="x_contact_phone" readonly="1" />
                            <field name="x_contact_line_user_id" readonly="1" />
                            <field name="purchase_order_number" />
                            <field name="category_id" />
                            <field
                                name="tag_ids"
                                widget="many2many_tags"
                                options="{'no_create_edit': True, 'color_field': 'color',}"
                            />
                            <field name="sequence" groups="base.group_no_one" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" widget="html" required="1" />
                        </page>
                        <page string="Other Information" name="other_info">
                            <group>
                                <field name="last_stage_update" readonly="1" />
                                <field name="assigned_date" readonly="1" />
                                <field name="closed_date" readonly="1" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>
    <record id="ticket_view_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.list</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <list>
                <field name="priority" widget="priority" />
                <field name="sequence" widget="handle" />
                <field name="number" decoration-bf="1" />
                <field name="purchase_order_number" optional="show" />
                <field name="name" />
                <field name="partner_id" optional="hide" widget="many2one_avatar" />
                <field name="user_id" optional="show" widget="many2one_avatar_user" />
                <field name="category_id" optional="hide" />
                <field name="unattended" column_invisible="1" />
                <field name="closed" column_invisible="1" />
                <field
                    name="tag_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color'}"
                    optional="show"
                />
                <field
                    name="create_date"
                    widget="remaining_days"
                    readonly="1"
                    optional="show"
                />
                <field
                    name="last_stage_update"
                    widget="remaining_days"
                    optional="show"
                />
                <field name="activity_ids" widget="list_activity" optional="hide" />
                <field
                    name="stage_id"
                    widget="badge"
                    decoration-success="not unattended and not closed"
                    decoration-info="unattended == True"
                    decoration-muted="closed == True"
                />
            </list>
        </field>
    </record>
    <record id="view_helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">helpdesk.ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <kanban
                class="o_kanban_mobile"
                default_group_by="stage_id"
                quick_create="false"
                group_create="1"
                group_edit="1"
                group_delete="1"
                decoration-success="x_sla_status == 'safe'"
                decoration-warning="x_sla_status == 'warning'"
                decoration-danger="x_sla_status == 'danger'"
            >
                <field name="number" />
                <field name="active" />
                <field name="name" />
                <field name="partner_id" />
                <field name="channel_id" />
                <field name="assigned_user_ids" />
                <field name="user_id" />
                <field name="user_ids" />
                <field name="team_id" />
                <field name="sequence" />
                <field name="color" />
                <field name="stage_id" />
                <field name="x_total_days" />
                <field name="x_sla_status" />
                <field name="x_no_update_warning" />
                <field name="priority" widget="priority" />
                <field name="assigned_date" />
                <progressbar
                    field="activity_state"
                    colors="{&quot;planned&quot;: &quot;success&quot;, &quot;today&quot;: &quot;warning&quot;, &quot;overdue&quot;: &quot;danger&quot;}"
                />
                <templates>
                    <t t-name="menu">
                        <t t-if="widget.editable">
                            <a
                                role="menuitem"
                                type="open"
                                class="dropdown-item"
                            >Edit</a>
                        </t>
                        <t t-if="widget.deletable">
                            <a
                                role="menuitem"
                                type="delete"
                                class="dropdown-item"
                            >Delete</a>
                        </t>
                        <field name="color" widget="kanban_color_picker" />
                    </t>
                    <t t-name="card">
                        <t t-set="sla_status" t-value="record.x_sla_status.raw_value || 'safe'" />
                        <div
                            t-att-style="sla_status == 'safe' ? 'border-left:4px solid #28a745; padding-left:8px;' : (sla_status == 'warning' ? 'border-left:4px solid #f0ad4e; padding-left:8px; background-color:rgba(240,173,78,0.08);' : 'border-left:4px solid #d9534f; padding-left:8px; background-color:rgba(217,83,79,0.08);')"
                        >
                            <div class="d-flex align-items-start gap-2">
                                <field class="fw-bold fs-5 flex-grow-1 min-w-0 text-break" name="name" />
                                <div class="d-flex align-items-center gap-1 flex-shrink-0">
                                    <t t-if="record.x_no_update_warning.raw_value">
                                        <span class="badge text-bg-warning" title="No update > 48h">
                                            &#9888; 48h
                                        </span>
                                    </t>
                                    <span class="badge text-bg-light">
                                        &#x23F1;
                                        <t t-esc="record.x_total_days.raw_value or 0" />d
                                    </span>
                                </div>
                            </div>
                            <div class="text-muted text-truncate">
                                <field name="category_id" />
                            </div>
                            <div class="d-flex gap-2 text-muted text-nowrap">
                                <field name="number" />
                                <field name="channel_id" />
                            </div>
                            <div class="text-muted text-truncate">
                                <field name="purchase_order_number" />
                            </div>
                            <small class="o_kanban_record_subtitle text-muted">
                                <field name="partner_id" />
                            </small>
                            <field
                                name="tag_ids"
                                widget="many2many_tags"
                                options="{'color_field': 'color'}"
                            />

                            <footer class="pt-1 d-flex align-items-end">
                                <div class="d-flex align-items-center gap-2">
                                    <field
                                        name="priority"
                                        widget="priority"
                                        groups="base.group_user"
                                    />
                                    <field name="activity_ids" widget="kanban_activity" />
                                </div>
                                <div class="ms-auto d-flex align-items-center gap-2">
                                    <field
                                        name="assigned_user_ids"
                                        widget="many2many_avatar_user"
                                    />
                                    <field name="kanban_state" widget="state_selection" />
                                </div>
                            </footer>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="helpdesk_ticket_views_pivot" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.pivot</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <pivot string="Pivot Analysis" disable_linking="True">
                <field name="team_id" type="row" />
                <field name="assigned_date" type="col" />
            </pivot>
        </field>
    </record>
    <record id="action_duplicate_ticket" model="ir.actions.server">
        <field name="name">Duplicate</field>
        <field name="model_id" ref="model_helpdesk_ticket" />
        <field name="binding_model_id" ref="helpdesk_mgmt.model_helpdesk_ticket" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = model.action_duplicate_tickets()
        </field>
    </record>
    <record id="model_helpdesk_ticket_action_share" model="ir.actions.server">
        <field name="name">Share</field>
        <field name="model_id" ref="helpdesk_mgmt.model_helpdesk_ticket" />
        <field name="binding_model_id" ref="helpdesk_mgmt.model_helpdesk_ticket" />
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">action = records.action_share()</field>
    </record>
</odoo>
