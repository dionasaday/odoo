<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_helpdesk_lineoa_channel_tree" model="ir.ui.view">
        <field name="name">helpdesk.lineoa.channel.list</field>
        <field name="model">helpdesk.lineoa.channel</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="helpdesk_team_id" />
                <field name="default_stage_id" />
                <field name="create_ticket" />
                <field name="match_mode" />
                <field name="active" />
            </list>
        </field>
    </record>

    <record id="view_helpdesk_lineoa_channel_form" model="ir.ui.view">
        <field name="name">helpdesk.lineoa.channel.form</field>
        <field name="model">helpdesk.lineoa.channel</field>
        <field name="arch" type="xml">
            <form string="LINE OA Channel">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="active" />
                    </group>
                    <group string="Credentials">
                        <field name="channel_access_token" widget="helpdesk_password_toggle" />
                        <field name="channel_secret" widget="helpdesk_password_toggle" />
                    </group>
                    <group string="Ticket Creation">
                        <field name="create_ticket" />
                        <field name="helpdesk_team_id" invisible="not create_ticket" />
                        <field name="default_stage_id" invisible="not create_ticket" />
                    </group>
                    <group string="Contact Matching">
                        <field name="match_mode" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_helpdesk_lineoa_channel" model="ir.actions.act_window">
        <field name="name">LINE OA Channels</field>
        <field name="res_model">helpdesk.lineoa.channel</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="helpdesk_lineoa_channel_menu"
        name="LINE OA Channels"
        parent="helpdesk_ticket_config_main_menu"
        action="action_helpdesk_lineoa_channel"
        sequence="85"
        groups="helpdesk_mgmt.group_helpdesk_manager"
    />
</odoo>
