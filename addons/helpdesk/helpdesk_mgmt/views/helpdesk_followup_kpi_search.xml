<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_helpdesk_followup_kpi_daily_search" model="ir.ui.view">
        <field name="name">helpdesk.followup.kpi.daily.search</field>
        <field name="model">helpdesk.followup.kpi.daily</field>
        <field name="arch" type="xml">
            <search>
                <field name="date" />
                <field name="team_id" />
                <field name="policy_id" />
                <field name="assigned_user_id" />
                <filter
                    name="after_sales_only"
                    string="After-Sales Only"
                    domain="['|', ('team_id', 'ilike', 'After-Sales'), ('team_id', 'ilike', 'After Sales')]"
                />
                <filter
                    name="installation_only"
                    string="Installation Only"
                    domain="['|', ('team_id', 'ilike', 'Installation'), ('team_id', 'ilike', 'ติดตั้ง')]"
                />
                <filter
                    name="by_policy"
                    string="By Policy"
                    context="{'group_by':'policy_id'}"
                />
                <filter name="last_7_days" string="Last 7 Days" domain="[('date', '&gt;=', (context_today() - relativedelta(days=6)))]" />
                <filter name="last_30_days" string="Last 30 Days" domain="[('date', '&gt;=', (context_today() - relativedelta(days=29)))]" />
                <filter name="last_90_days" string="Last 90 Days" domain="[('date', '&gt;=', (context_today() - relativedelta(days=89)))]" />
                <group>
                    <filter name="groupby_team" string="Team" context="{'group_by':'team_id'}" />
                    <filter name="groupby_policy" string="Policy" context="{'group_by':'policy_id'}" />
                    <filter name="groupby_cs" string="CS" context="{'group_by':'assigned_user_id'}" />
                </group>
            </search>
        </field>
    </record>
</odoo>
