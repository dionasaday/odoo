<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="ir_cron_helpdesk_followup_create" model="ir.cron">
        <field name="name">Helpdesk Follow-up: Create Activities</field>
        <field name="model_id" ref="model_helpdesk_followup_event" />
        <field name="state">code</field>
        <field name="code">model._cron_create_followups()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="active">True</field>
    </record>

    <record id="ir_cron_helpdesk_followup_escalate" model="ir.cron">
        <field name="name">Helpdesk Follow-up: Escalate Overdue</field>
        <field name="model_id" ref="model_helpdesk_followup_event" />
        <field name="state">code</field>
        <field name="code">model._cron_escalate_overdue()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="active">True</field>
    </record>
    <record id="ir_cron_helpdesk_followup_overdue_notify" model="ir.cron">
        <field name="name">Helpdesk Follow-up: Overdue Reminder</field>
        <field name="model_id" ref="model_helpdesk_followup_event" />
        <field name="state">code</field>
        <field name="code">model._cron_notify_overdue_followups()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="active">True</field>
    </record>
</odoo>
