<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="otd_marketplace_stock.PasswordToggleField" t-inherit="web.CharField" t-inherit-mode="primary">
        <xpath expr="//input" position="attributes">
            <attribute name="t-att-type">state.show ? 'text' : (props.isPassword ? 'password' : 'text')</attribute>
        </xpath>
        <xpath expr="//div[@class='o_field_input_buttons']" position="inside">
            <button type="button"
                    class="btn btn-link py-0 px-2 o_password_toggle"
                    t-on-click="togglePassword"
                    t-att-title="toggleTitle"
                    t-if="props.isPassword">
                <i t-att-class="state.show ? 'fa fa-eye-slash' : 'fa fa-eye'"/>
            </button>
        </xpath>
    </t>

</templates>

