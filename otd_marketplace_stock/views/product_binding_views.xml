<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Marketplace Product Binding List View -->
    <record id="view_marketplace_product_binding_tree" model="ir.ui.view">
        <field name="name">marketplace.product.binding.tree</field>
        <field name="model">marketplace.product.binding</field>
        <field name="arch" type="xml">
            <list string="Product Bindings" decoration-success="active==True and exclude_push==False" decoration-muted="active==False">
                <field name="display_name"/>
                <field name="product_id"/>
                <field name="shop_id"/>
                <field name="external_sku"/>
                <field name="external_product_id"/>
                <field name="current_online_qty"/>
                <field name="last_stock_push_at"/>
                <field name="exclude_push"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Marketplace Product Binding Form View -->
    <record id="view_marketplace_product_binding_form" model="ir.ui.view">
        <field name="name">marketplace.product.binding.form</field>
        <field name="model">marketplace.product.binding</field>
        <field name="arch" type="xml">
            <form string="Product Binding">
                <header>
                    <button name="action_push_stock" string="Push Stock" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" options="{'no_create': True}"/>
                            <field name="shop_id" options="{'no_create': True}"/>
                            <field name="account_id" readonly="1"/>
                            <field name="channel" readonly="1"/>
                        </group>
                        <group>
                            <field name="external_sku"/>
                            <field name="external_product_id"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="exclude_push"/>
                        </group>
                    </group>
                    <group string="Override Rules">
                        <group>
                            <field name="buffer_qty_override" placeholder="Use account default"/>
                            <field name="min_qty_override" placeholder="Use account default"/>
                        </group>
                    </group>
                    <group string="Sync Status">
                        <group>
                            <field name="current_online_qty" readonly="1"/>
                            <field name="last_stock_push_at" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Marketplace Product Binding Search View -->
    <record id="view_marketplace_product_binding_search" model="ir.ui.view">
        <field name="name">marketplace.product.binding.search</field>
        <field name="model">marketplace.product.binding</field>
        <field name="priority">16</field>
        <field name="arch" type="xml">
            <search string="Product Bindings">
                <field name="display_name"/>
                <field name="product_id"/>
                <field name="external_sku"/>
                <field name="shop_id"/>
                <separator/>
                <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                <filter string="Exclude Push" name="filter_exclude_push" domain="[('exclude_push', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Marketplace Product Binding Action -->
    <record id="action_marketplace_product_binding" model="ir.actions.act_window">
        <field name="name">Product Bindings</field>
        <field name="res_model">marketplace.product.binding</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_marketplace_product_binding_search"/>
        <field name="context">{}</field>
    </record>
</odoo>

