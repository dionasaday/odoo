<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- OAuth Success Template -->
    <template id="oauth_success" name="OAuth Success">
        <t t-call="web.layout">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fa fa-check-circle fa-3x text-success mb-3"></i>
                                <h3>Authorization Successful!</h3>
                                <p class="text-muted">Your <t t-esc="channel"/> account has been connected successfully.</p>
                                <p class="text-muted">Account: <strong><t t-esc="account.name"/></strong></p>
                                <a t-att-href="'/web#id=' + str(account.id) + '&amp;model=marketplace.account&amp;view_type=form'" 
                                   class="btn btn-primary mt-3">
                                    Go to Account Settings
                                </a>
                                <script>
                                    setTimeout(function() {
                                        window.opener.location.reload();
                                        window.close();
                                    }, 3000);
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- OAuth Error Template -->
    <template id="oauth_error" name="OAuth Error">
        <t t-call="web.layout">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fa fa-exclamation-circle fa-3x text-danger mb-3"></i>
                                <h3>Authorization Failed</h3>
                                <p class="text-danger"><t t-esc="error"/></p>
                                <p class="text-muted">Channel: <strong><t t-esc="channel"/></strong></p>
                                <a href="/web#action=otd_marketplace_stock.action_marketplace_account" 
                                   class="btn btn-secondary mt-3">
                                    Go to Accounts
                                </a>
                                <button onclick="window.close()" class="btn btn-outline-secondary mt-3 ml-2">
                                    Close
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>

