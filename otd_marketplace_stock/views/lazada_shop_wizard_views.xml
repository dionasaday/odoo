<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Lazada Import Products Wizard -->
    <record id="view_lazada_import_products_wizard_form" model="ir.ui.view">
        <field name="name">lazada.import.products.wizard.form</field>
        <field name="model">lazada.import.products.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Lazada Products">
                <sheet class="o_lazada_wizard_sheet">
                    <h2 class="o_lazada_wizard_title">ยืนยันการนำเข้าข้อมูลสินค้า</h2>
                    <div class="o_lazada_wizard_intro">
                        <span class="o_badge">Step 1</span>
                        <div class="o_meta">
                            <span class="o_label">Shop</span>
                            <span class="o_value"><field name="shop_id" readonly="1"/></span>
                        </div>
                    </div>
                    <div class="o_lazada_wizard_card o_theme-import">
                        <div class="o_badge_icon"/>
                        <div class="o_content">
                            <h3>ดึงข้อมูลสินค้าเข้าระบบหลัก</h3>
                            <p>สินค้าทั้งหมดจากร้านนี้จะถูกบันทึกเข้าระบบเพื่อพร้อมสำหรับการเชื่อมต่อกับช่องทางอื่น</p>
                            <div class="o_confirm_tip">
                                <span class="o_hint">พิมพ์คำว่า</span>
                                <span class="o_keyword">confirm</span>
                                <span class="o_hint">เพื่อยืนยันการนำเข้าข้อมูลสินค้า</span>
                            </div>
                        </div>
                    </div>
                    <div class="o_input_block">
                        <div class="o_form_label">ข้อความยืนยัน</div>
                        <field name="confirm_text" placeholder="กรอกคำว่า confirm"/>
                        <div class="o_confirm_note">Type 'confirm' to continue</div>
                    </div>
                </sheet>
                <footer class="o_lazada_wizard_footer">
                    <button string="ยกเลิก" class="btn btn-secondary" special="cancel"/>
                    <button string="ยืนยัน" name="action_confirm" type="object" class="btn btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Lazada Update Images Wizard -->
    <record id="view_lazada_update_images_wizard_form" model="ir.ui.view">
        <field name="name">lazada.update.images.wizard.form</field>
        <field name="model">lazada.update.images.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Lazada Images">
                <sheet class="o_lazada_wizard_sheet">
                    <h2 class="o_lazada_wizard_title">ยืนยันการอัปเดทรูปภาพสินค้า</h2>
                    <div class="o_lazada_wizard_intro">
                        <span class="o_badge">Step 2</span>
                        <div class="o_meta">
                            <span class="o_label">Shop</span>
                            <span class="o_value"><field name="shop_id" readonly="1"/></span>
                        </div>
                    </div>
                    <div class="o_lazada_wizard_card o_theme-image">
                        <div class="o_badge_icon"/>
                        <div class="o_content">
                            <h3>อัปเดทรูปภาพจาก Lazada</h3>
                            <p>ระบบจะดึงรูปสินค้าใหม่และจัดเก็บใน Odoo เพื่อใช้กับทุกช่องทาง</p>
                            <div class="o_confirm_tip">
                                <span class="o_hint">พิมพ์คำว่า</span>
                                <span class="o_keyword">confirm</span>
                                <span class="o_hint">เพื่อยืนยันการอัปเดทรูปภาพสินค้า</span>
                            </div>
                            <field name="update_existing_images" widget="boolean_toggle"/>
                            <span class="o_checkbox_hint">ปรับปรุงรูปที่มีอยู่แล้วด้วยภาพล่าสุด</span>
                        </div>
                    </div>
                    <div class="o_input_block">
                        <div class="o_form_label">ข้อความยืนยัน</div>
                        <field name="confirm_text" placeholder="กรอกคำว่า confirm"/>
                    </div>
                </sheet>
                <footer class="o_lazada_wizard_footer">
                    <button string="ยกเลิก" class="btn btn-secondary" special="cancel"/>
                    <button string="ยืนยัน" name="action_confirm" type="object" class="btn btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

