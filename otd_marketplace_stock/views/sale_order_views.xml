<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- LOCKED: ห้ามแก้ xpath/field นี้ เพราะมี test อ้างอิง -->
    <!-- Extend Sale Order Form View -->
    <record id="view_order_form_marketplace" model="ir.ui.view">
        <field name="name">sale.order.form.marketplace</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add Marketplace Order button in button_box -->
            <xpath expr="//div[@name='button_box']" position="inside">
            </xpath>
            
            <!-- Add Marketplace fields in order form -->
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="marketplace_channel" invisible="not marketplace_order_id"/>
                <field name="marketplace_shop" invisible="not marketplace_order_id"/>
            </xpath>

            <xpath expr="//group[field[@name='partner_id']]" position="after">
                <group invisible="marketplace_order_id == False">
                    <field name="marketplace_channel_icon" widget="html" readonly="1"/>
                </group>
                <group invisible="marketplace_order_id != False">
                    <field name="manual_marketplace_channel_id" options="{'no_create': False}" string="Channel"/>
                </group>
            </xpath>

        </field>
    </record>

    <!-- Extend Sale Order List View -->
    <record id="view_order_tree_marketplace" model="ir.ui.view">
        <field name="name">sale.order.tree.marketplace</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <!-- Replace name field with marketplace_order_number (shows marketplace order number if available, otherwise Odoo order number) -->
            <xpath expr="//field[@name='name']" position="replace">
                <field name="marketplace_order_number" string="Number" optional="show"
                       class="o_marketplace_order_number_column"/>
            </xpath>
            <!-- Keep original name field for filtering/search (hidden from list view) -->
            <xpath expr="//field[@name='client_order_ref']" position="before">
                <field name="name" optional="hide" column_invisible="1" invisible="1"/>
            </xpath>
            <!-- Add Marketplace Channel column -->
            <xpath expr="//field[@name='marketplace_order_number']" position="after">
                <field name="marketplace_channel_icon" string="Channel" optional="show" widget="html"/>
            </xpath>
            <!-- Keep original fields for filtering/search (hidden from list view) -->
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="marketplace_channel" optional="hide" column_invisible="1" invisible="1"/>
                <field name="marketplace_shop" optional="hide" column_invisible="1" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Extend Sale Order Search View -->
    <record id="view_sales_order_filter_marketplace" model="ir.ui.view">
        <field name="name">sale.order.search.marketplace</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <!-- Add Marketplace filter -->
            <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                <separator/>
                <filter string="Marketplace Orders" name="marketplace_orders" 
                        domain="[('marketplace_order_id', '!=', False)]"/>
                <filter string="WooCommerce" name="woocommerce_orders" 
                        domain="[('marketplace_channel', '=', 'woocommerce')]"/>
                <filter string="Shopee" name="shopee_orders" 
                        domain="[('marketplace_channel', '=', 'shopee')]"/>
                <filter string="TikTok Shop" name="tiktok_orders" 
                        domain="[('marketplace_channel', '=', 'tiktok')]"/>
            </xpath>
            
            <!-- Add Marketplace fields to search -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="marketplace_channel"/>
                <field name="marketplace_shop"/>
            </xpath>
        </field>
    </record>
</odoo>

