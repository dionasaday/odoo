<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Theme Color Settings in General Settings -->
    <record id="res_config_settings_view_form_theme_colors" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.theme.colors</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Add Theme Color section in form -->
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Theme Colors" string="Theme Colors" data-key="custom_theme_onthisday">
                    <h2>Theme Colors</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="theme_primary_color" placeholder="#232222"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="theme_primary_color" string="Primary Color"/>
                                <div class="text-muted">
                                    Primary color for theme (Hex code, e.g., #232222). Used in Navigation Bar, Buttons, and UI elements.
                                    <br/>
                                    <small>Default: #232222 (Dark Gray)</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="theme_secondary_color" placeholder="#623412"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="theme_secondary_color" string="Secondary Color"/>
                                <div class="text-muted">
                                    Secondary color for theme (Hex code, e.g., #623412). Used for hover states and active elements.
                                    <br/>
                                    <small>Default: #623412 (Brown)</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="theme_text_color" placeholder="#FFFFFF"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="theme_text_color" string="Text Color"/>
                                <div class="text-muted">
                                    Text color for theme (Hex code, e.g., #FFFFFF). Used for text on primary color background.
                                    <br/>
                                    <small>Default: #FFFFFF (White)</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16">
                        <div class="col-12">
                            <div class="alert alert-info" role="alert">
                                <strong>Note:</strong> After changing colors and saving, please refresh your browser (Ctrl+Shift+R or Cmd+Shift+R) to see the changes immediately.
                                The theme will be applied to all users of this company.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

