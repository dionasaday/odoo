<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom Action for Sales Orders - Shows ALL orders without any filtering -->
    <record id="action_sales_orders_all" model="ir.actions.act_window">
        <field name="name">Sales Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,kanban,form,calendar,pivot,graph,activity</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="limit">80</field>
    </record>

    <!-- Override Sales Menu to open Sales Orders instead of Quotations -->
    <record id="sale.sale_menu_root" model="ir.ui.menu">
        <field name="action" ref="action_sales_orders_all"/>
    </record>
</odoo>

