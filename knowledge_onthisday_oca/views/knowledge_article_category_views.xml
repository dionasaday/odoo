<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_knowledge_article_category_list" model="ir.ui.view">
            <field name="name">knowledge.article.category.list</field>
            <field name="model">knowledge.article.category</field>
            <field name="arch" type="xml">
                <list string="Categories" decoration-muted="active == False">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="icon"/>
                    <field name="article_count" string="Articles"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_knowledge_article_category_form" model="ir.ui.view">
            <field name="name">knowledge.article.category.form</field>
            <field name="model">knowledge.article.category</field>
            <field name="arch" type="xml">
                <form string="Category">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" placeholder="Category Name..."/>
                                <field name="code" placeholder="e.g., sop, product, system"/>
                                <field name="icon" placeholder="e.g., ðŸ“‹, ðŸ“¦, âš™ï¸"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="color" widget="color_picker"/>
                                <field name="article_count" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Description of this category..."/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_knowledge_article_category_search" model="ir.ui.view">
            <field name="name">knowledge.article.category.search</field>
            <field name="model">knowledge.article.category</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_knowledge_article_category_kanban" model="ir.ui.view">
            <field name="name">knowledge.article.category.kanban</field>
            <field name="model">knowledge.article.category</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="icon"/>
                    <field name="color"/>
                    <field name="article_count"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click" t-att-data-color="record.color.raw_value">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <span t-esc="record.icon.raw_value" style="font-size: 20px; margin-right: 8px;"/>
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <field name="code"/>
                                        <div>
                                            <field name="article_count"/> articles
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action: Categories -->
        <record id="action_knowledge_article_category" model="ir.actions.act_window">
            <field name="name">Categories</field>
            <field name="res_model">knowledge.article.category</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="knowledge_onthisday_oca.view_knowledge_article_category_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first category!
                </p>
                <p>
                    Categories help organize your knowledge articles.
                    Create categories like "SOP", "Product Knowledge", "System Manuals", etc.
                </p>
            </field>
        </record>
    </data>
</odoo>

